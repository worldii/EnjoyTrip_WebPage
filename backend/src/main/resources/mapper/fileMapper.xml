<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.enjoytrip.media.model.mapper.FileMapper">
  <insert id="insertFile" parameterType="List">
    INSERT INTO file_info (board_id, file_url)
    VALUES
    <foreach collection="imageFiles" item="item" separator=",">
      (#{item.boardId}, #{item.fileUrl})
    </foreach>
  </insert>

  <resultMap type="com.ssafy.enjoytrip.media.model.entity.FileInfo" id="fileInfo">
    <id column="file_info_id" property="fileInfoId"/>
    <result column="file_url" property="fileUrl"/>
    <result column="board_id" property="boardId"/>
  </resultMap>

  <select id="selectFile" resultMap="fileInfo">
    select *
    from file_info
    where board_id = #{boardId}
  </select>

  <delete id="deleteFileByBoardId">
    delete
    from file_info
    where board_id = #{boardId}
  </delete>

</mapper>
